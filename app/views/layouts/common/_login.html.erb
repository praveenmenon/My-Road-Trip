<div class="row margin-vert-30">
  <!-- Login Box -->
  <div class="col-md-4 col-md-offset-4 col-sm-offset-3">
    <%= form_tag sessions_path , :class =>"login-page", :id =>"sign_in", :method=> :post, authenticity_token: true  do |f| %>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div class="login-header margin-bottom-30">
      <h2>Login to your account</h2>
    </div>

    <div class="input-group margin-bottom-20">
      <span class="input-group-addon">
        <i class="fa fa-user"></i>
      </span>
      <%= text_field_tag :email,nil, :class =>"form-control",:id =>"inputUsername", :placeholder => "Email" %>
    </div>

    <div class="input-group margin-bottom-20">
      <span class="input-group-addon">
        <i class="fa fa-lock"></i>
      </span>
      <%= password_field_tag :password,nil, :class =>"form-control",:id =>"inputPassword",:placeholder => "Password" %>
    </div>

    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6">
        <%= submit_tag "Login", :class =>"btn btn-primary pull-right" %>
      </div>
    </div>
    <hr>
    <h4>New User ?</h4>
    <p>
     <%= link_to "Click here",new_user_path ,:method=> :get, remote: true, 'data-toggle' => 'modal', 'data-target'=>'#myModal'%> to Sign Up.
     <!-- facebook log in Button trigger modal -->
     <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class=>"pull-right" %></p>
     <%end %>
   </div>
 </div>