<div id="content">
  <div class="container background-white">
    <div class="row margin-vert-30">
      <!-- Main Column -->
      <div class="col-md-9">
        <!-- Blog Post -->
        <%if @trips.present?%>
        <%@trips.each do |trip|%>
        <%= render :partial=>"layouts/common/trip_post",:locals=>{:trip => trip}%>
        <%end%>
        <%= paginate @trips %>
        <%else%>
        <h2 class="animate fadeIn text-center">No Trips Created.</h2>
        <%end%>
